[sqlfluff]
# Dialect for PostgreSQL
dialect = postgres

# Templater for dbt
templater = dbt

# Max line length
max_line_length = 120

# Exclude paths
exclude_rules = L031, L034

# Rules to enable
rules = L001, L002, L003, L004, L005, L006, L007, L008, L009, L010, L011, L012, L013, L014, L015, L016, L017, L018, L019, L020, L021, L022, L023, L024, L025, L026, L027, L028, L029, L030, L032, L033, L035, L036, L037, L038, L039, L040, L041, L042, L043, L044, L045, L046, L047, L048, L049, L050, L051, L052

[sqlfluff:indentation]
# Indentation type
indent_unit = space

# Number of spaces per indent
tab_space_size = 4

# Indent contents of SELECT clause
indented_joins = true
indented_ctes = true
indented_using_on = true
indented_on_contents = true

[sqlfluff:rules:L010]
# Keywords should be UPPERCASE
capitalisation_policy = upper

[sqlfluff:rules:L014]
# Unquoted identifiers should be lowercase
extended_capitalisation_policy = lower

[sqlfluff:rules:L030]
# Function names should be lowercase
extended_capitalisation_policy = lower

[sqlfluff:rules:L040]
# NULL & Boolean literals should be UPPERCASE
capitalisation_policy = upper

[sqlfluff:templater:dbt]
# dbt project directory
project_dir = .
profiles_dir = ~/.dbt
profile = employee_analytics
target = dev

